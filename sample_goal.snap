#################
#  Parameters   #
#################

DEST_USER=root
DEST_HOST=localhost
DEST_DIR=/backup/kimsufi
MAIL_ADDRESS=ben
SOURCE_USER=root
# host defined in ssh/config to use special identity file
SOURCE_HOST=kimsufi-backup

########################
# do the real backup   #
########################

backup /var var \
--exclude /var/lock \
--exclude /var/log \
--exclude /var/cache \
--exclude /var/lib/apt \
--exclude /var/lib/dpkg \
--exclude /var/cache/apt/archives

backup /etc etc

backup /root root

backup /home home \
--exclude /home/backup \
--exclude /home/vservers/ftp/home \
--exclude /home/vservers/torrent/home/torrent/completed \
--exclude /home/vservers/torrent/home/torrent/rtsession \
--exclude /home/vservers/torrent/home/torrent/dl \
--exclude /home/www/dav \
--exclude /home/mpd/metal \
--exclude /home/vservers/subsonic/mp3
